<%- model_class = Loja -%>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
     <div class="search">
        <%= form_tag(lojas_path, :method => :get) do %>
           <%= text_field_tag 'search', nil, placeholder: 'Digite o nome para pesquisar' %>
           <%= submit_tag "search" %>
        <% end %>
        </div>
     </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>

      <th><%= model_class.human_attribute_name(:cnpj) %></th>
      <th><%= model_class.human_attribute_name(:enderereco) %></th>
      <th><%= model_class.human_attribute_name(:beirro) %></th>
      <th><%= model_class.human_attribute_name(:cidade) %></th>
      <th><%= model_class.human_attribute_name(:estado) %></th>
      <th><%= model_class.human_attribute_name(:telefone) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lojas.each do |loja| %>
      <tr>
        <!-- <td><%#= link_to loja.id, loja_path(loja) %></td> -->
        <td><%= loja.nome %></td>
        <td><%= loja.cnpj %></td>
        <td><%= loja.enderereco %></td>
        <td><%= loja.beirro %></td>
        <td><%= loja.cidade %></td>
        <td><%= loja.estado %></td>
        <td><%= loja.telefone %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_loja_path(loja), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      loja_path(loja),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_loja_path,
            :class => 'btn btn-primary' %>
