<%- model_class = Cliente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
 <dt><strong><%= image_tag @cliente.imagem.url(:medium) %></strong></dt><br><br><br><br><br>
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @cliente.nome %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @cliente.email %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:cpf) %>:</strong></dt>
  <dd><%= @cliente.cpf %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:obs) %>:</strong></dt>
  <dd><%= @cliente.obs %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:aniversario) %>:</strong></dt>
  <dd><%= @cliente.aniversario %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
  <dd><%= @cliente.telefone %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:loja) %>:</strong></dt>
  <%if @cliente.loja_id.blank? != true%>
  <dd><%= Loja.find(@cliente.loja_id).nome %></dd><br>
  <%else%>
  <dd><%= @cliente.loja_id %></dd><br>
  <%end%>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              clientes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cliente_path(@cliente), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cliente_path(@cliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
